{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Create Widget Request",
  "description": "Schema for creating a new widget",
  "required": ["name", "type"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "description": "The name of the widget"
    },
    "type": {
      "type": "string",
      "enum": ["contact", "lead", "survey", "feedback", "newsletter"],
      "description": "The type of the widget"
    },
    "enabled": {
      "type": "boolean",
      "default": true,
      "description": "Whether the widget is enabled"
    },
    "fields": {
      "type": "object",
      "description": "Widget field definitions",
      "patternProperties": {
        "^[a-zA-Z_][a-zA-Z0-9_]*$": {
          "type": "object",
          "required": ["type"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["text", "email", "tel", "textarea", "select", "checkbox", "radio", "number", "url", "date"]
            },
            "required": {
              "type": "boolean",
              "default": false
            },
            "placeholder": {
              "type": "string"
            },
            "options": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "validation": {
              "type": "object",
              "properties": {
                "minLength": {"type": "integer", "minimum": 0},
                "maxLength": {"type": "integer", "minimum": 1},
                "pattern": {"type": "string"}
              }
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
