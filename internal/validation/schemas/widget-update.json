{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Widget Update Request",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "type": {
      "type": "string",
      "enum": ["contact", "survey", "quiz", "feedback"]
    },
    "enabled": {
      "type": "boolean"
    },
    "fields": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_]+$": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["text", "email", "textarea", "checkbox", "radio", "select"]
            },
            "required": {
              "type": "boolean"
            }
          },
          "required": ["type", "required"]
        }
      }
    }
  },
  "minProperties": 1
}
