{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Widget Update Request",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "type": {
      "type": "string",
      "enum": ["lead-form", "banner", "action", "social-proof", "live-interest", "widget-tab", "sticky-bar", "quiz", "wheelOfFortune"]
    },
    "isVisible": {
      "type": "boolean"
    }
  },
  "minProperties": 1,
  "additionalProperties": false
}
