{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Form Submission Request",
  "description": "Schema for submitting data to a form",
  "required": ["data"],
  "properties": {
    "data": {
      "type": "object",
      "description": "Form submission data",
      "minProperties": 1,
      "patternProperties": {
        "^[a-zA-Z_][a-zA-Z0-9_]*$": {
          "oneOf": [
            {"type": "string"},
            {"type": "number"},
            {"type": "boolean"},
            {
              "type": "array",
              "items": {"type": "string"}
            }
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
