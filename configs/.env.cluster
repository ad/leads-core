# Redis Cluster Environment Configuration
# Use this file as reference for Redis cluster deployment

# Server Configuration
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s

# Redis Cluster Configuration
# All 6 nodes for full cluster connectivity
REDIS_ADDRESSES=redis-node-1:6379,redis-node-2:6379,redis-node-3:6379,redis-node-4:6379,redis-node-5:6379,redis-node-6:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=development-jwt-secret-change-in-production

# Rate Limiting
RATE_LIMIT_IP_PER_MINUTE=10000
RATE_LIMIT_GLOBAL_PER_MINUTE=50000

# TTL Settings
TTL_FREE_DAYS=30
TTL_PRO_DAYS=365
